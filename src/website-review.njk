<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('website-review-form');
    const formMessage = document.getElementById('review-form-message');
    const focusField = document.getElementById('review-focus');
    const focusCounter = document.getElementById('review-focus-counter');

    // Character counter for optional textarea (1000 limit helps reduce spam)
    if (focusField && focusCounter) {
        function updateFocusCounter() {
            const length = focusField.value.length;
            const maxLength = 1000;
            focusCounter.textContent = length + ' / ' + maxLength + ' characters';
            if (length > maxLength * 0.9) {
                focusCounter.classList.add('text-red-600', 'dark:text-red-400');
                focusCounter.classList.remove('text-[var(--color-text-light)]');
            } else {
                focusCounter.classList.remove('text-red-600', 'dark:text-red-400');
                focusCounter.classList.add('text-[var(--color-text-light)]');
            }
        }
        focusField.addEventListener('input', updateFocusCounter);
        updateFocusCounter();
    }

    if (form) {
        const websiteInput = document.getElementById('review-website');
        const websiteError = document.getElementById('review-website-error');

        function normaliseWebsiteUrl(value) {
            const trimmed = (value || '').trim();
            if (!trimmed) return '';
            if (/^https?:\/\//i.test(trimmed)) return trimmed;
            return 'https://' + trimmed;
        }

        function isValidWebsiteUrl(value) {
            try {
                const url = new URL(value);
                if (url.protocol !== 'http:' && url.protocol !== 'https:') return false;
                const host = url.hostname.toLowerCase();
                if (host === 'localhost') return true;
                return host.includes('.');
            } catch {
                return false;
            }
        }

        form.addEventListener('submit', async function(e) {
            e.preventDefault();

            if (websiteInput && websiteError) {
                const raw = websiteInput.value.trim();
                const normalised = normaliseWebsiteUrl(raw);
                websiteError.classList.add('hidden');
                websiteInput.setAttribute('aria-invalid', 'false');

                if (!normalised || !isValidWebsiteUrl(normalised)) {
                    websiteError.classList.remove('hidden');
                    websiteInput.setAttribute('aria-invalid', 'true');
                    websiteInput.focus();
                    return;
                }
                websiteInput.value = normalised;
            }

            const submitButton = form.querySelector('button[type="submit"]');
            const originalText = submitButton.textContent;
            submitButton.disabled = true;
            submitButton.textContent = 'Sending...';
            formMessage.classList.add('hidden');

            try {
                const formData = new FormData(form);
                const response = await fetch('/', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: new URLSearchParams(formData).toString()
                });

                if (response.ok) {
                    window.location.href = '/website-review-thanks/';
                } else {
                    throw new Error('Form submission failed');
                }
            } catch (error) {
                formMessage.className = 'p-4 rounded-lg text-center bg-red-50 dark:bg-red-900/20 text-red-700 dark:text-red-400 border border-red-200 dark:border-red-800';
                formMessage.innerHTML = 'Sorry, there was an error sending your request. Please try again or email us at <a href="mailto:hello@codecraftnorth.co.uk" class="underline font-semibold">hello@codecraftnorth.co.uk</a>.';
                formMessage.classList.remove('hidden');
            } finally {
                submitButton.disabled = false;
                submitButton.textContent = originalText;
            }
        });
    }
});
</script>
