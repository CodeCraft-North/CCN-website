<section class="py-24 text-center bg-[var(--color-bg-primary)] dark:bg-[var(--color-bg-primary-dark)]">
    <div class="container">
        <div class="max-w-2xl mx-auto">
            <div class="mb-8">
                <svg class="w-20 h-20 mx-auto text-brand-primary mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
