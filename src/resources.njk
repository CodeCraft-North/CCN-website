<!-- Blog Posts Section -->
<section class="section-padding bg-bg-primary">
    <div class="container">
        <div class="text-center mb-12">
            <h2 class="text-4xl md:text-5xl font-black mb-4 text-text-primary leading-tight">Latest Articles</h2>
            <p class="text-lg text-text-secondary">Explore our most recent insights and how-tos.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
            {% for post in collections.posts | reverse %}
            <article class="bg-white dark:bg-gray-800 rounded-xl shadow-lg border border-gray-200 dark:border-gray-700 overflow-hidden transition-all duration-300 hover:shadow-xl hover:-translate-y-1">
                <a href="{{ post.url }}" class="block">
                    {% if post.data.image %}
                    <div class="aspect-video bg-gray-200 dark:bg-gray-700 overflow-hidden">
                        <img src="{{ post.data.image }}" alt="{{ post.data.title }}" class="w-full h-full object-cover">
                    </div>
                    {% else %}
                    <div class="aspect-video bg-gradient-to-br from-brand-primary to-brand-secondary flex items-center justify-center">
                        <svg class="w-16 h-16 text-white opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                        </svg>
                    </div>
                    {% endif %}
                    
                    <div class="p-6">
                        {% if post.data.category %}
                        <span class="inline-block px-3 py-1 text-xs font-semibold text-brand-primary bg-blue-50 dark:bg-blue-900/20 rounded-full mb-3">{{ post.data.category }}</span>
                        {% endif %}
                        
                        <h3 class="text-xl font-bold mb-3 text-text-primary leading-tight hover:text-brand-primary transition-colors">{{ post.data.title }}</h3>
                        
                        {% if post.data.excerpt %}
                        <p class="text-text-secondary mb-4 leading-relaxed">{{ post.data.excerpt }}</p>
                        {% endif %}
                        
                        <div class="flex items-center justify-between text-sm text-text-secondary">
                            <time datetime="{{ post.data.date | htmlDateString }}">{{ post.data.date | readableDate }}</time>
                            <span class="text-brand-primary font-medium">Read more →</span>
                        </div>
                    </div>
                </a>
            </article>
            {% endfor %}
        </div>
    </div>
</section>

