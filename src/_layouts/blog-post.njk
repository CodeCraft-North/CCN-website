---
layout: base.njk
description: "{{ excerpt or title }}"
---

<article class="py-24 bg-[var(--color-bg-primary)] dark:bg-[var(--color-bg-primary-dark)]">
    <div class="max-w-4xl mx-auto px-6">
        <!-- Header -->
        <header class="mb-12 text-center">
            {% if category %}
            <span class="inline-block px-4 py-2 text-sm font-semibold text-brand-primary bg-brand-light rounded-full mb-4">{{ category }}</span>
            {% endif %}
            
            <h1 class="text-4xl md:text-5xl font-black mb-6 text-[var(--color-text-primary)] dark:text-[var(--color-text-primary-dark)] leading-tight">{{ title }}</h1>
            
            <div class="flex items-center justify-center gap-4 text-[var(--color-text-secondary)] dark:text-[var(--color-text-secondary-dark)]">
                <time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
                {% if readTime %}
                <span>Â·</span>
                <span>{{ readTime }}</span>
                {% endif %}
            </div>
        </header>

        <!-- Featured Image -->
        {% if image %}
        <div class="mb-12 rounded-xl overflow-hidden shadow-lg">
            <img src="{{ image }}" alt="{{ title }}" class="w-full h-auto" loading="eager" width="1200" height="630">
        </div>
        {% endif %}

        <!-- Content -->
        <div class="prose max-w-none">
            {{ content | safe }}
        </div>

        <!-- Back Link -->
        <div class="mt-12 pt-8 border-t border-[var(--color-border-standard)] dark:border-[var(--color-border-standard-dark)]">
            <a href="/resources/" class="inline-flex items-center gap-2 text-brand-primary hover:underline font-medium">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Resources
            </a>
        </div>
    </div>
</article>

<!-- Article Structured Data (Schema.org). Set dateModified or updated in post front matter when you edit an article. -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": "{{ title }}",
  "description": "{{ excerpt or title }}",
  "image": "{% if image %}https://codecraftnorth.co.uk{{ image }}{% else %}https://codecraftnorth.co.uk/img/logos/CCN-logo-transparent-blue.webp{% endif %}",
  "datePublished": "{{ date | htmlDateString }}",
  "dateModified": "{{ (dateModified or updated or date) | htmlDateString }}",
  "author": {
    "@type": "Person",
    "name": "Carl Ball",
    "url": "https://codecraftnorth.co.uk/about/"
  },
  "publisher": {
    "@type": "Organization",
    "name": "CodeCraft North",
    "logo": {
      "@type": "ImageObject",
      "url": "https://codecraftnorth.co.uk/img/logos/CCN-logo-transparent-blue.webp"
    }
  },
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "https://codecraftnorth.co.uk{{ page.url }}"
  }
}
</script>

