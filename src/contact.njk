<!-- Contact Form & Info Section -->
<section class="section-padding bg-[var(--color-bg-section)] dark:bg-[var(--color-bg-section-dark)] relative">
    <div class="container relative z-10">
        <div class="max-w-4xl mx-auto space-y-12">
            
            <!-- Contact Form -->
            <div class="bg-[var(--color-bg-surface)] dark:bg-[var(--color-bg-surface-dark)] rounded-xl p-8 shadow-lg border border-[var(--color-border-standard)] dark:border-[var(--color-border-standard-dark)]">
                <h2 class="text-3xl font-bold mb-6 text-[var(--color-text-primary)] dark:text-[var(--color-text-primary-dark)]">Get in touch</h2>
                <p class="text-[var(--color-text-secondary)] dark:text-[var(--color-text-secondary-dark)] mb-8 leading-relaxed">
                    If you're enquiring about a new project, please include a few details about your business and what you're hoping to achieve. The more context you share, the better advice we can give.
                </p>

                <form id="contact-form" class="space-y-6">
                    <div>
                        <label for="name" class="block text-sm font-semibold text-[var(--color-text-primary)] dark:text-[var(--color-text-primary-dark)] mb-2">Name *</label>
                        <input 
                            type="text" 
                            id="name" 
                            name="name" 
                            required 
                            class="w-full px-4 py-3 rounded-lg border border-[var(--color-border-standard)] dark:border-[var(--color-border-standard-dark)] bg-[var(--color-bg-surface)] dark:bg-[var(--color-bg-surface-dark)] text-[var(--color-text-primary)] dark:text-[var(--color-text-primary-dark)] focus:border-brand-primary focus:ring-2 focus:ring-brand-primary/20 outline-none transition-all"
                            placeholder="Your name"
                        >
                    </div>

                    <div>
                        <label for="email" class="block text-sm font-semibold text-[var(--color-text-primary)] dark:text-[var(--color-text-primary-dark)] mb-2">Email *</label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            required 
                            class="w-full px-4 py-3 rounded-lg border border-[var(--color-border-standard)] dark:border-[var(--color-border-standard-dark)] bg-[var(--color-bg-surface)] dark:bg-[var(--color-bg-surface-dark)] text-[var(--color-text-primary)] dark:text-[var(--color-text-primary-dark)] focus:border-brand-primary focus:ring-2 focus:ring-brand-primary/20 outline-none transition-all"
                            placeholder="your@email.com"
                        >
                    </div>

                    <div>
                        <label for="phone" class="block text-sm font-semibold text-[var(--color-text-primary)] dark:text-[var(--color-text-primary-dark)] mb-2">Phone (optional)</label>
                        <input 
                            type="tel" 
                            id="phone" 
                            name="phone" 
                            class="w-full px-4 py-3 rounded-lg border border-[var(--color-border-standard)] dark:border-[var(--color-border-standard-dark)] bg-[var(--color-bg-surface)] dark:bg-[var(--color-bg-surface-dark)] text-[var(--color-text-primary)] dark:text-[var(--color-text-primary-dark)] focus:border-brand-primary focus:ring-2 focus:ring-brand-primary/20 outline-none transition-all"
                            placeholder="Your phone number"
                        >
                    </div>

                    <div>
                        <label for="business" class="block text-sm font-semibold text-[var(--color-text-primary)] dark:text-[var(--color-text-primary-dark)] mb-2">Business name (optional)</label>
                        <input 
                            type="text" 
                            id="business" 
                            name="business" 
                            class="w-full px-4 py-3 rounded-lg border border-[var(--color-border-standard)] dark:border-[var(--color-border-standard-dark)] bg-[var(--color-bg-surface)] dark:bg-[var(--color-bg-surface-dark)] text-[var(--color-text-primary)] dark:text-[var(--color-text-primary-dark)] focus:border-brand-primary focus:ring-2 focus:ring-brand-primary/20 outline-none transition-all"
                            placeholder="Your business name"
                        >
                    </div>

                    <div>
                        <label for="subject" class="block text-sm font-semibold text-[var(--color-text-primary)] dark:text-[var(--color-text-primary-dark)] mb-2">Subject *</label>
                        <select 
                            id="subject" 
                            name="subject" 
                            required 
                            class="w-full px-4 py-3 rounded-lg border border-[var(--color-border-standard)] dark:border-[var(--color-border-standard-dark)] bg-[var(--color-bg-surface)] dark:bg-[var(--color-bg-surface-dark)] text-[var(--color-text-primary)] dark:text-[var(--color-text-primary-dark)] focus:border-brand-primary focus:ring-2 focus:ring-brand-primary/20 outline-none transition-all"
                        >
                            <option value="">Select a subject...</option>
                            <option value="new-project">New website project</option>
                            <option value="essentials">Essentials Website Subscription</option>
                            <option value="growth">Growth Website Subscription</option>
                            <option value="one-off">One-Off Website Build</option>
                            <option value="general">General enquiry</option>
                        </select>
                    </div>

                    <div>
                        <label for="message" class="block text-sm font-semibold text-[var(--color-text-primary)] dark:text-[var(--color-text-primary-dark)] mb-2">Message *</label>
                        <textarea 
                            id="message" 
                            name="message" 
                            required 
                            rows="6" 
                            class="w-full px-4 py-3 rounded-lg border border-[var(--color-border-standard)] dark:border-[var(--color-border-standard-dark)] bg-[var(--color-bg-surface)] dark:bg-[var(--color-bg-surface-dark)] text-[var(--color-text-primary)] dark:text-[var(--color-text-primary-dark)] focus:border-brand-primary focus:ring-2 focus:ring-brand-primary/20 outline-none transition-all resize-vertical"
                            placeholder="Tell us about your project or enquiry..."
                        ></textarea>
                    </div>

                    <div class="flex items-start gap-3">
                        <input 
                            type="checkbox" 
                            id="privacy" 
                            name="privacy" 
                            required 
                            class="mt-1 w-4 h-4 text-brand-primary border-[var(--color-border-standard)] dark:border-[var(--color-border-standard-dark)] rounded focus:ring-brand-primary"
                        >
                        <label for="privacy" class="text-sm text-[var(--color-text-secondary)] dark:text-[var(--color-text-secondary-dark)]">
                            I agree to the <a href="/privacy-policy/" class="text-brand-primary hover:underline">Privacy Policy</a> and understand my data will be processed to respond to this enquiry.
                        </label>
                    </div>

                    <button 
                        type="submit" 
                        class="btn btn--primary w-full text-lg py-4"
                    >
                        Send message
                    </button>

                    <div id="form-message" class="hidden p-4 rounded-lg text-center"></div>
                </form>
            </div>

            <!-- Contact Information -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="bg-blue-50 dark:bg-blue-900/10 rounded-lg p-6 border border-blue-200 dark:border-blue-800">
                    <h3 class="font-bold mb-2 text-[var(--color-text-primary)] dark:text-[var(--color-text-primary-dark)]">Prefer a call?</h3>
                    <p class="text-sm text-[var(--color-text-secondary)] dark:text-[var(--color-text-secondary-dark)] leading-relaxed">
                        If you'd rather talk things through, we can arrange a short discovery call to discuss your goals and next steps. Just drop us an email and we'll find a time that suits you.
                    </p>
                </div>

                <div class="bg-[var(--color-bg-section)] dark:bg-[var(--color-bg-section-dark)] rounded-lg p-6 border border-[var(--color-border-standard)] dark:border-[var(--color-border-standard-dark)]">
                    <h3 class="font-bold mb-2 text-[var(--color-text-primary)] dark:text-[var(--color-text-primary-dark)]">Already a client?</h3>
                    <p class="text-sm text-[var(--color-text-secondary)] dark:text-[var(--color-text-secondary-dark)] leading-relaxed">
                        For existing clients, please use your usual support email or submit a request through your client portal so we can prioritise it correctly.
                    </p>
                </div>
            </div>

        </div>
    </div>
</section>

<script>
// Contact form handling
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contact-form');
    const formMessage = document.getElementById('form-message');

    if (form) {
        form.addEventListener('submit', async function(e) {
            e.preventDefault();

            // Get form data
            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());

            // Show loading state
            const submitButton = form.querySelector('button[type="submit"]');
            const originalButtonText = submitButton.innerHTML;
            submitButton.disabled = true;
            submitButton.innerHTML = 'Sending...';

            try {
                // TODO: Replace with your Cloudflare Pages Function endpoint
                const response = await fetch('/api/contact', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data)
                });

                if (response.ok) {
                    // Success
                    formMessage.className = 'p-4 rounded-lg text-center bg-[var(--color-brand-light)] dark:bg-[var(--color-brand-dark)] text-brand-primary dark:text-[var(--color-text-primary-dark)]';
                    formMessage.textContent = 'Thank you! Your message has been sent successfully. We\'ll get back to you soon.';
                    formMessage.classList.remove('hidden');
                    form.reset();
                } else {
                    throw new Error('Form submission failed');
                }
            } catch (error) {
                // Error - for now, just show a message with email fallback
                formMessage.className = 'p-4 rounded-lg text-center bg-[var(--color-brand-light)] dark:bg-[var(--color-brand-dark)] text-brand-primary dark:text-[var(--color-text-primary-dark)]';
                formMessage.innerHTML = 'Form submission is not yet configured. Please email us directly at <a href="mailto:hello@codecraftnorth.co.uk" class="underline font-semibold">hello@codecraftnorth.co.uk</a>';
                formMessage.classList.remove('hidden');
            } finally {
                // Reset button
                submitButton.disabled = false;
                submitButton.innerHTML = originalButtonText;
            }
        });
    }
});
</script>

