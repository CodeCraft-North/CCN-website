<script>
// Contact form handling for Netlify Forms
document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contact-form');
    const formMessage = document.getElementById('form-message');
    const messageField = document.getElementById('message');
    const messageCounter = document.getElementById('message-counter');

    // Character counter for message field
    if (messageField && messageCounter) {
        function updateCounter() {
            const length = messageField.value.length;
            const maxLength = messageField.maxLength;
            messageCounter.textContent = `${length} / ${maxLength} characters`;
            
            // Change colour when approaching limit
            if (length > maxLength * 0.9) {
                messageCounter.classList.add('text-red-600', 'dark:text-red-400');
                messageCounter.classList.remove('text-[var(--color-text-light)]');
            } else {
                messageCounter.classList.remove('text-red-600', 'dark:text-red-400');
                messageCounter.classList.add('text-[var(--color-text-light)]');
            }
        }
        
        messageField.addEventListener('input', updateCounter);
        updateCounter(); // Initial count
    }

    // Client-side validation for all fields
    function validateField(field) {
        const maxLength = parseInt(field.getAttribute('maxlength'));
        if (maxLength && field.value.length > maxLength) {
            field.setCustomValidity(`This field cannot exceed ${maxLength} characters.`);
            return false;
        }
        field.setCustomValidity('');
        return true;
    }

    // Validate all fields on input
    if (form) {
        const textFields = form.querySelectorAll('input[type="text"], input[type="email"], input[type="tel"], textarea');
        textFields.forEach(field => {
            field.addEventListener('input', function() {
                validateField(this);
            });
        });

        form.addEventListener('submit', async function(e) {
            e.preventDefault();

            // Validate all fields before submission
            let isValid = true;
            textFields.forEach(field => {
                if (!validateField(field)) {
                    isValid = false;
                }
            });

            if (!isValid) {
                formMessage.className = 'p-4 rounded-lg text-center bg-yellow-50 dark:bg-yellow-900/20 text-yellow-700 dark:text-yellow-400 border border-yellow-200 dark:border-yellow-800';
                formMessage.innerHTML = 'Please check your input. Some fields exceed the maximum length.';
                formMessage.classList.remove('hidden');
                return;
            }

            // Get form data
            const formData = new FormData(form);

            // Show loading state
            const submitButton = form.querySelector('button[type="submit"]');
            const originalButtonText = submitButton.innerHTML;
            submitButton.disabled = true;
            submitButton.innerHTML = 'Sending...';
            formMessage.classList.add('hidden');

            try {
                // Submit to Netlify Forms
                const response = await fetch('/', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                    body: new URLSearchParams(formData).toString()
                });

                if (response.ok) {
                    // Success - redirect to thank you page
                    window.location.href = '/thank-you/';
                } else {
                    throw new Error('Form submission failed');
                }
            } catch (error) {
                // Error - show fallback message
                formMessage.className = 'p-4 rounded-lg text-center bg-red-50 dark:bg-red-900/20 text-red-700 dark:text-red-400 border border-red-200 dark:border-red-800';
                formMessage.innerHTML = 'Sorry, there was an error sending your message. Please email us directly at <a href="mailto:hello@codecraftnorth.co.uk" class="underline font-semibold">hello@codecraftnorth.co.uk</a>';
                formMessage.classList.remove('hidden');
            } finally {
                // Reset button
                submitButton.disabled = false;
                submitButton.innerHTML = originalButtonText;
            }
        });
    }
});
</script>

